<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.StockPrice" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
        <item name="colorPrimary">@color/green_800</item>
        <item name="colorPrimaryVariant">@color/green_900</item>
        <item name="android:statusBarColor" tools:ignore="ObsoleteSdkInt" tools:targetApi="l">
            @color/green_900
        </item>
    </style>

    <style name="StyleText">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ItemStock">
        <item name="android:background">@color/green_400</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="DetailsFragmentTextInfo">
        <item name="android:textColor">@color/black</item>
        <item name="background">@color/green_500</item>
    </style>

    <!-- SplashScreenTheme. -->
    <style name="SplashTheme" parent="Theme.MaterialComponents.NoActionBar">
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
        <item name="colorPrimary">@color/green_800</item>
        <item name="colorPrimaryVariant">@color/green_900</item>
        <item name="android:statusBarColor" tools:ignore="ObsoleteSdkInt" tools:targetApi="l">
            @color/green_900
        </item>
    </style>
</resources>