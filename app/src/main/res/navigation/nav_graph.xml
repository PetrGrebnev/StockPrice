<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/allListStockFragment">

    <fragment
        android:id="@+id/allListStockFragment"
        android:name="com.example.stockprice.screen.liststock.AllListStockFragment"
        android:label="Share Tracking"
        tools:layout="@layout/all_list_stock_fragment">
        <action
            android:id="@+id/action_allListStockFragment_to_detailsStockFragment"
            app:destination="@id/detailsStockFragment" />

    </fragment>

    <fragment
        android:id="@+id/detailsStockFragment"
        android:name="com.example.stockprice.screen.details.DetailsStockFragment"
        android:label="Details Stock"
        tools:layout="@layout/details_stokc_fragment">
        <argument
            android:name="symbol"
            app:argType="string" />
        <argument
            android:name="nameStock"
            app:argType="string" />
        <action
            android:id="@+id/action_detailsStockFragment_to_allListStockFragment"
            app:destination="@id/allListStockFragment" />
    </fragment>

</navigation>